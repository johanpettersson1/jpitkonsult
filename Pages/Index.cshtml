@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<div class="containerw3" id="jp_home">
    <img src="~/business.jpg" alt="Responsive image" style="width:100%;">
    <div class="centeredw3 text-dark">
        <p class="lead">IT-Consultants with a focus on <strong>banking</strong> and <strong>insurance</strong> companies.</p>
    </div>
</div> 

<div class="bg-light d-flex justify-content-center" id="jp_clients"> 
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <a href="https://www.sgfinans.se/">
                    <img src="~/sg_trans.png" class="img-fluid" alt="...">
                </a>
            </div>
            <div class="col">
                <a href="https://www.santanderconsumer.se/">
                    <img src="~/santander_trans.png" class="img-fluid" alt="...">
                </a>
            </div>
            <div class="col">
                <a href="https://www2.ibinder.com/pub/se/?Locale=sv-se">
                    <img src="~/ibinder_trans.png" class="img-fluid" alt="...">
                </a>
            </div>
        </div>
    </div>
</div>

<div class="containerw3" id="jp_career">
    <img src="~/cherry.jpg" alt="Responsive image" style="width:100%;">

    <div class="centeredw3 text-dark">
        <p class="lead">
            JP IT-Konsult is looking for new consultants who have <strong>worked a few years</strong>,
            have <strong>a degree</strong> in computer science and are ready to <strong>take the next step</strong> in their career.
        </p>
    </div>
</div>

<div class="bg-light d-flex justify-content-center" id="jp_contact">
    <div class="d-flex flex-row bd-highlight align-items-center">
        <div class="p-4 bd-highlight">
            <img src="~/johan.jpg" class="rounded-circle" alt="Picture of Johan" width="150" height="150">
        </div>
        <div class="p-4 bd-highlight">
            <blockquote class="blockquote">
                <p class="lead">If you would like to know more about JP IT-Konsult and what we can do for you, please contact us at <a href="mailto:info@jpitkonsult.se">info@jpitkonsult.se</a><br></p>
                <footer class="blockquote-footer lead"><cite title="Source Title">Johan Pettersson, CEO</cite></footer>
            </blockquote>
        </div>
    </div>
</div>

<div class="containerw3" id="jp_about">
    <img src="~/pen.jpg" alt="Responsive image" style="width:100%;">

    <div class="centeredw3 text-dark">
        <p class="lead">
            JP IT-Konsult was founded in September 2018 by Johan Pettersson.
        </p>
    </div>
</div>
